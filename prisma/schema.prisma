generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PATIENT
  PROVIDER
  ADMIN
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         UserRole  @default(PATIENT)
  isDisabled   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  lastAccessAt DateTime?

  // Subscription & referrals
  subscriptionTier String  @default("free")
  referralCode     String? @unique
  referredBy       String?
  metadata         Json?

  // Privacy & Consent
  consentToShareClinicalSummary  Boolean @default(false)
  allowProviderToProviderSharing Boolean @default(false)
  emailNotificationsEnabled      Boolean @default(true)

  // Provider-only settings
  defaultClinicalSummaryView   String? @default("provider")
  includeProviderNotesInShares Boolean @default(false)
  copyToEHRFormat              String? @default("plain_text")

  // Data controls
  dataExportRequestedAt      DateTime?
  accountDeletionRequestedAt DateTime?

  chatSessions        ChatSession[]
  subscription        Subscription?
  memory              UserMemory?
  disableEvents       UserDisableEvent[]
  passwordResetTokens PasswordResetToken[]
  consentChangeLogs   ConsentChangeLog[]
  dataRequests        DataRequest[]
  appointments        Appointment[]
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  stripeCustomerId String    @unique
  stripeSubId      String?   @unique
  status           String    @default("inactive")
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  messages  Json     @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Analytics {
  id        String   @id @default(cuid())
  event     String
  metadata  Json?
  userId    String?
  createdAt DateTime @default(now())

  @@index([event])
  @@index([createdAt])
}

model UserMemory {
  id                     String   @id @default(cuid())
  userId                 String?  @unique
  anonId                 String?  @unique
  goals                  Json?
  preferences            Json?
  topicsDiscussed        Json?
  vaultName              String? // Personalized name for Sacred Vault
  disclaimerAcknowledged Boolean  @default(false)
  optOut                 Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  user                   User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([anonId])
}

enum DocumentCategory {
  LAB
  LAB_RESULT
  IMAGING
  VISIT_NOTE
  DISCHARGE
  PRESCRIPTION
  REFERRAL
  INSURANCE_CARD
  GOVERNMENT_ID
  LAB_ORDER
  IMAGING_ORDER
  PRIOR_AUTH
  BENEFITS_SUMMARY
  BILLING
  OTHER
}

model Document {
  id                     String           @id @default(cuid())
  userId                 String?
  anonId                 String?
  title                  String
  category               DocumentCategory @default(OTHER)
  docDate                DateTime?
  storagePath            String
  mimeType               String
  sizeBytes              Int
  includeInPacketDefault Boolean          @default(false)
  createdAt              DateTime         @default(now())
  deletedAt              DateTime?

  shareLinks DocumentShareLink[]
  decode     DocumentDecode?

  @@index([userId])
  @@index([anonId])
}

model DocumentDecode {
  id         String   @id @default(cuid())
  documentId String   @unique
  summary    String   @db.Text
  keyTerms   Json // Array of {term, definition, category}
  questions  Json // Array of strings
  nextSteps  Json // Array of strings
  safetyNote String?  @db.Text
  createdAt  DateTime @default(now())

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

model DocumentShareLink {
  id         String    @id @default(cuid())
  documentId String
  token      String    @unique
  expiresAt  DateTime
  revokedAt  DateTime?
  revokedBy  String?
  createdAt  DateTime  @default(now())

  document Document                  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  accesses DocumentShareLinkAccess[]

  @@index([documentId])
}

model DocumentShareLinkAccess {
  id          String   @id @default(cuid())
  shareLinkId String
  accessedAt  DateTime @default(now())
  ipAddress   String?
  userAgent   String?

  shareLink DocumentShareLink @relation(fields: [shareLinkId], references: [id], onDelete: Cascade)
}

enum ProviderPacketTemplate {
  PRIMARY
  SPECIALIST
  URGENT
}

model ProviderPacket {
  id        String                 @id @default(cuid())
  userId    String?
  anonId    String?
  template  ProviderPacketTemplate @default(PRIMARY)
  payload   Json
  createdAt DateTime               @default(now())

  shareLinks ProviderPacketLink[]

  @@index([userId])
  @@index([anonId])
}

model ProviderPacketLink {
  id        String    @id @default(cuid())
  token     String    @unique
  packetId  String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  packet   ProviderPacket            @relation(fields: [packetId], references: [id], onDelete: Cascade)
  accesses ProviderPacketAccessLog[]

  @@index([packetId])
}

model ProviderPacketAccessLog {
  id                   String   @id @default(cuid())
  providerPacketLinkId String
  accessedAt           DateTime @default(now())
  ipAddress            String?
  userAgent            String?

  link ProviderPacketLink @relation(fields: [providerPacketLinkId], references: [id], onDelete: Cascade)
}

model AccessLog {
  id            String   @id @default(cuid())
  actorId       String? // who performed the action
  subjectUserId String? // whose PHI was accessed
  action        String // VIEW, EXPORT, SHARE, REVOKE
  resourceType  String // CLINICAL_SUMMARY, DOCUMENT, PROVIDER_PACKET
  resourceId    String
  ipAddress     String?
  userAgent     String?
  metadata      Json? // additional context
  createdAt     DateTime @default(now())

  @@index([actorId, createdAt])
  @@index([subjectUserId, createdAt])
  @@index([resourceType, resourceId])
  @@index([createdAt])
}

// User Disable Events - Preserves history across multiple disable/enable cycles
model UserDisableEvent {
  id         String    @id @default(cuid())
  userId     String
  disabledAt DateTime  @default(now())
  disabledBy String // Admin user ID who performed the disable
  reason     String? // Optional free text reason
  resolvedAt DateTime? // When account was re-enabled (null = still disabled)
  resolvedBy String? // Admin user ID who re-enabled

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([disabledAt])
  @@index([resolvedAt])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime  @default(now())
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

model ConsentChangeLog {
  id          String   @id @default(cuid())
  userId      String
  consentType String // "clinicalSummary", "providerSharing", "emailNotifications"
  oldValue    Boolean
  newValue    Boolean
  changedBy   String? // User ID who made the change (null = user themselves)
  changedAt   DateTime @default(now())
  source      String // "user_settings", "admin_portal", "onboarding"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, changedAt])
  @@index([consentType])
  @@index([changedAt])
}

model DataRequest {
  id                 String    @id @default(cuid())
  userId             String
  requestType        String // "export", "deletion"
  status             String    @default("pending") // "pending", "in_progress", "completed", "cancelled"
  requestedAt        DateTime  @default(now())
  fulfilledAt        DateTime?
  fulfilledBy        String? // Admin user ID who fulfilled the request
  cancelledAt        DateTime?
  cancelledBy        String? // Admin user ID who cancelled the request
  cancellationReason String?
  notes              String? // Admin notes about the request

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([requestType])
  @@index([requestedAt])
}

model Appointment {
  id                String   @id @default(cuid())
  userId            String?
  anonId            String?
  providerName      String
  providerSpecialty String?
  appointmentDate   DateTime
  appointmentType   String // "checkup", "follow-up", "consultation", "procedure", "lab", "imaging", "other"
  status            String   @default("scheduled") // "scheduled", "completed", "cancelled", "missed"
  location          String? // Office name or address
  notes             String?
  reminderSent      Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([anonId])
  @@index([appointmentDate])
  @@index([status])
}

model Provider {
  id        String   @id @default(cuid())
  userId    String?
  anonId    String?
  name      String
  specialty String?
  phone     String?
  email     String?
  address   String?
  notes     String?
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
}

model CareTeamMember {
  id              String   @id @default(cuid())
  userId          String?
  anonId          String?
  name            String
  role            String // e.g., "Primary Care", "Cardiologist", "Care Coordinator"
  specialty       String?
  organization    String?
  phone           String?
  email           String?
  notes           String?
  isPrimary       Boolean  @default(false)
  linkedProviders String[] @default([]) // Array of Provider IDs
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
}

model CarePlan {
  id                String   @id @default(cuid())
  userId            String?
  anonId            String?
  title             String
  goal              String // User-defined care goal
  questionsToAsk    String[] @default([]) // Questions to prepare for provider visits
  linkedDocuments   String[] @default([]) // Array of Document IDs
  linkedAppointments String[] @default([]) // Array of Appointment IDs
  notes             String?
  targetDate        DateTime?
  status            String   @default("active") // active, completed, on-hold
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([status])
}
model Priority {
  id                 String   @id @default(cuid())
  userId             String?
  anonId             String?
  title              String
  description        String?
  type               String // "question", "bring-item", "follow-up", "other"
  status             String   @default("active") // active, completed
  linkedAppointment  String? // Appointment ID
  linkedCareTeam     String? // CareTeamMember ID
  linkedCarePlan     String? // CarePlan ID
  dueDate            DateTime?
  completedAt        DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([status])
  @@index([type])
}