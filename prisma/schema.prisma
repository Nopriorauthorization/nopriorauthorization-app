generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PATIENT
  PROVIDER
  ADMIN
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         UserRole  @default(PATIENT)
  isDisabled   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  lastAccessAt DateTime?

  // Privacy & Consent
  consentToShareClinicalSummary  Boolean @default(false)
  allowProviderToProviderSharing Boolean @default(false)
  emailNotificationsEnabled      Boolean @default(true)

  // Provider-only settings
  defaultClinicalSummaryView   String? @default("provider")
  includeProviderNotesInShares Boolean @default(false)
  copyToEHRFormat              String? @default("plain_text")

  // Data controls
  dataExportRequestedAt      DateTime?
  accountDeletionRequestedAt DateTime?

  chatSessions        ChatSession[]
  subscription        Subscription?
  memory              UserMemory?
  disableEvents       UserDisableEvent[]
  passwordResetTokens PasswordResetToken[]
  consentChangeLogs   ConsentChangeLog[]
  dataRequests        DataRequest[]
  appointments        Appointment[]
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  stripeCustomerId String    @unique
  stripeSubId      String?   @unique
  status           String    @default("inactive")
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  messages  Json     @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Analytics {
  id        String   @id @default(cuid())
  event     String
  metadata  Json?
  userId    String?
  createdAt DateTime @default(now())

  @@index([event])
  @@index([createdAt])
}

model UserMemory {
  id                     String   @id @default(cuid())
  userId                 String?  @unique
  anonId                 String?  @unique
  goals                  Json?
  preferences            Json?
  topicsDiscussed        Json?
  vaultName              String? // Personalized name for Sacred Vault
  disclaimerAcknowledged Boolean  @default(false)
  optOut                 Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  user                   User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([anonId])
}

enum DocumentCategory {
  LAB
  IMAGING
  VISIT_NOTE
  DISCHARGE
  OTHER
}

model Document {
  id                     String           @id @default(cuid())
  userId                 String?
  anonId                 String?
  title                  String
  category               DocumentCategory @default(OTHER)
  docDate                DateTime?
  storagePath            String
  mimeType               String
  sizeBytes              Int
  includeInPacketDefault Boolean          @default(false)
  createdAt              DateTime         @default(now())
  deletedAt              DateTime?

  shareLinks DocumentShareLink[]
  decode     DocumentDecode?    @relation("DocumentDecode")

  @@index([userId])
  @@index([anonId])
}

model DocumentDecode {
  id         String   @id @default(cuid())
  documentId String   @unique
  summary    String   @db.Text
  keyTerms   Json // Array of {term, definition, category}
  questions  Json // Array of strings
  nextSteps  Json // Array of strings
  safetyNote String?  @db.Text
  createdAt  DateTime @default(now())

  Document Document @relation("DocumentDecode", fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

model DocumentShareLink {
  id         String    @id @default(cuid())
  documentId String
  token      String    @unique
  expiresAt  DateTime
  revokedAt  DateTime?
  revokedBy  String?
  createdAt  DateTime  @default(now())

  document Document                  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  accesses DocumentShareLinkAccess[]

  @@index([documentId])
}

model DocumentShareLinkAccess {
  id          String   @id @default(cuid())
  shareLinkId String
  accessedAt  DateTime @default(now())
  ipAddress   String?
  userAgent   String?

  shareLink DocumentShareLink @relation(fields: [shareLinkId], references: [id], onDelete: Cascade)
}

enum ProviderPacketTemplate {
  PRIMARY
  SPECIALIST
  URGENT
}

model ProviderPacket {
  id        String                 @id @default(cuid())
  userId    String?
  anonId    String?
  template  ProviderPacketTemplate @default(PRIMARY)
  payload   Json
  createdAt DateTime               @default(now())

  shareLinks ProviderPacketLink[]

  @@index([userId])
  @@index([anonId])
}

model ProviderPacketLink {
  id        String    @id @default(cuid())
  token     String    @unique
  packetId  String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  packet   ProviderPacket            @relation(fields: [packetId], references: [id], onDelete: Cascade)
  accesses ProviderPacketAccessLog[]

  @@index([packetId])
}

model ProviderPacketAccessLog {
  id                   String   @id @default(cuid())
  providerPacketLinkId String
  accessedAt           DateTime @default(now())
  ipAddress            String?
  userAgent            String?

  link ProviderPacketLink @relation(fields: [providerPacketLinkId], references: [id], onDelete: Cascade)
}

model AccessLog {
  id            String   @id @default(cuid())
  actorId       String? // who performed the action
  subjectUserId String? // whose PHI was accessed
  action        String // VIEW, EXPORT, SHARE, REVOKE
  resourceType  String // CLINICAL_SUMMARY, DOCUMENT, PROVIDER_PACKET
  resourceId    String
  ipAddress     String?
  userAgent     String?
  metadata      Json? // additional context
  createdAt     DateTime @default(now())

  @@index([actorId, createdAt])
  @@index([subjectUserId, createdAt])
  @@index([resourceType, resourceId])
  @@index([createdAt])
}

// User Disable Events - Preserves history across multiple disable/enable cycles
model UserDisableEvent {
  id         String    @id @default(cuid())
  userId     String
  disabledAt DateTime  @default(now())
  disabledBy String // Admin user ID who performed the disable
  reason     String? // Optional free text reason
  resolvedAt DateTime? // When account was re-enabled (null = still disabled)
  resolvedBy String? // Admin user ID who re-enabled

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([disabledAt])
  @@index([resolvedAt])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime  @default(now())
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

model ConsentChangeLog {
  id          String   @id @default(cuid())
  userId      String
  consentType String // "clinicalSummary", "providerSharing", "emailNotifications"
  oldValue    Boolean
  newValue    Boolean
  changedBy   String? // User ID who made the change (null = user themselves)
  changedAt   DateTime @default(now())
  source      String // "user_settings", "admin_portal", "onboarding"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, changedAt])
  @@index([consentType])
  @@index([changedAt])
}

model DataRequest {
  id                 String    @id @default(cuid())
  userId             String
  requestType        String // "export", "deletion"
  status             String    @default("pending") // "pending", "in_progress", "completed", "cancelled"
  requestedAt        DateTime  @default(now())
  fulfilledAt        DateTime?
  fulfilledBy        String? // Admin user ID who fulfilled the request
  cancelledAt        DateTime?
  cancelledBy        String? // Admin user ID who cancelled the request
  cancellationReason String?
  notes              String? // Admin notes about the request

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([requestType])
  @@index([requestedAt])
}

model Appointment {
  id                String   @id @default(cuid())
  userId            String?
  anonId            String?
  providerName      String
  providerSpecialty String?
  appointmentDate   DateTime
  appointmentType   String // "checkup", "follow-up", "consultation", "procedure", "lab", "imaging", "other"
  status            String   @default("scheduled") // "scheduled", "completed", "cancelled", "missed"
  location          String? // Office name or address
  notes             String?
  reminderSent      Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([anonId])
  @@index([appointmentDate])
  @@index([status])
}

model Provider {
  id        String   @id @default(cuid())
  userId    String?
  anonId    String?
  name      String
  specialty String?
  phone     String?
  email     String?
  address   String?
  notes     String?
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ratings ProviderRating[]

  @@index([userId])
  @@index([anonId])
}

model ProviderRating {
  id             String   @id @default(cuid())
  userId         String?
  anonId         String?
  providerId     String
  providerName   String
  specialty      String?
  rating         Int // 1-5 stars
  tags           String[] @default([])
  notes          String?
  wouldRecommend Boolean  @default(true)
  lastVisit      DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([anonId])
  @@index([providerId])
}

model PhotoComparison {
  id          String   @id @default(cuid())
  userId      String?
  anonId      String?
  beforePhoto String // URL or path to before photo
  afterPhoto  String // URL or path to after photo
  title       String?
  notes       String?
  daysBetween Int? // Calculated days between photos
  category    String? // "face", "body", "skin", etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([category])
}

model VoiceMemo {
  id         String   @id @default(cuid())
  userId     String?
  anonId     String?
  audioUrl   String // URL to stored audio file
  transcript String? // AI-generated transcription
  title      String?
  duration   Int? // Duration in seconds
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([createdAt])
}

model RedFlag {
  id          String   @id @default(cuid())
  userId      String?
  anonId      String?
  type        String // "interaction", "contraindication", "timing", "safety"
  severity    String // "critical", "warning", "info"
  title       String
  description String
  medications String[] @default([])
  dismissed   Boolean  @default(false)
  detectedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([dismissed])
  @@index([severity])
}

model TrustedCircleMember {
  id           String   @id @default(cuid())
  userId       String // Owner of the vault
  name         String
  email        String
  relationship String?
  permissions  String[] @default([])
  status       String   @default("pending") // "pending", "active", "expired"
  invitedAt    DateTime @default(now())
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([email])
  @@index([status])
}

model TrustedCircleInvite {
  id           String    @id @default(cuid())
  userId       String // Owner sending the invite
  inviteeName  String
  inviteeEmail String
  relationship String?
  permissions  String[]  @default([])
  token        String    @unique @default(cuid())
  status       String    @default("pending") // "pending", "accepted", "expired"
  expiresAt    DateTime?
  acceptedAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
  @@index([token])
  @@index([status])
  @@index([inviteeEmail])
}
