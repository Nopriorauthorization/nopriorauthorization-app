generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PATIENT
  PROVIDER
  ADMIN
}

enum SubscriptionTier {
  FREE
  CORE
  PREMIUM
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String?
  role         UserRole  @default(PATIENT)
  subscriptionTier SubscriptionTier @default(FREE)
  isDisabled   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  lastAccessAt DateTime?

  // Privacy & Consent
  consentToShareClinicalSummary  Boolean @default(false)
  allowProviderToProviderSharing Boolean @default(false)
  emailNotificationsEnabled      Boolean @default(true)

  // Provider-only settings
  defaultClinicalSummaryView   String? @default("provider")
  includeProviderNotesInShares Boolean @default(false)
  copyToEHRFormat              String? @default("plain_text")

  // Data controls
  dataExportRequestedAt      DateTime?
  accountDeletionRequestedAt DateTime?

  chatSessions        ChatSession[]
  subscription        Subscription?
  memory              UserMemory?
  blueprint           Blueprint?
  vault               Vault?
  disableEvents       UserDisableEvent[]
  passwordResetTokens PasswordResetToken[]
  consentChangeLogs   ConsentChangeLog[]
  dataRequests        DataRequest[]
  appointments        Appointment[]
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  stripeCustomerId String    @unique
  stripeSubId      String?   @unique
  status           String    @default("inactive")
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  messages  Json     @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Analytics {
  id        String   @id @default(cuid())
  event     String
  metadata  Json?
  userId    String?
  createdAt DateTime @default(now())

  @@index([event])
  @@index([createdAt])
}

model UserMemory {
  id                     String   @id @default(cuid())
  userId                 String?  @unique
  anonId                 String?  @unique
  goals                  Json?
  preferences            Json?
  topicsDiscussed        Json?
  vaultName              String? // Personalized name for Sacred Vault
  disclaimerAcknowledged Boolean  @default(false)
  onboardingCompleted    Boolean  @default(false) // Tracks if user completed Phase 4B onboarding
  optOut                 Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  user                   User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([anonId])
}

model Blueprint {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Blueprint Sections
  identityContext      Json? // Personal identity, values, context
  healthFoundations    Json? // Core health conditions, diagnoses
  treatments           Json? // Current and past treatments, medications
  timeline             Json? // Health journey timeline, milestones
  documents            Json? // Key documents, media references
  providers            Json? // Care team, providers, relationships
  preparation          Json? // Advocacy prep, questions, goals

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum DocumentCategory {
  LAB
  IMAGING
  VISIT_NOTE
  DISCHARGE
  OTHER
}

model Document {
  id                     String           @id @default(cuid())
  userId                 String?
  anonId                 String?
  title                  String
  category               DocumentCategory @default(OTHER)
  docDate                DateTime?
  storagePath            String
  mimeType               String
  sizeBytes              Int
  includeInPacketDefault Boolean          @default(false)
  createdAt              DateTime         @default(now())
  deletedAt              DateTime?

  shareLinks DocumentShareLink[]
  decode     DocumentDecode?    @relation("DocumentDecode")

  @@index([userId])
  @@index([anonId])
}

model DocumentDecode {
  id         String   @id @default(cuid())
  documentId String   @unique
  summary    String   @db.Text
  keyTerms   Json // Array of {term, definition, category}
  questions  Json // Array of strings
  nextSteps  Json // Array of strings
  safetyNote String?  @db.Text
  createdAt  DateTime @default(now())

  Document Document @relation("DocumentDecode", fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
}

model DocumentShareLink {
  id         String    @id @default(cuid())
  documentId String
  token      String    @unique
  expiresAt  DateTime
  revokedAt  DateTime?
  revokedBy  String?
  createdAt  DateTime  @default(now())

  document Document                  @relation(fields: [documentId], references: [id], onDelete: Cascade)
  accesses DocumentShareLinkAccess[]

  @@index([documentId])
}

model DocumentShareLinkAccess {
  id          String   @id @default(cuid())
  shareLinkId String
  accessedAt  DateTime @default(now())
  ipAddress   String?
  userAgent   String?

  shareLink DocumentShareLink @relation(fields: [shareLinkId], references: [id], onDelete: Cascade)
}

enum ProviderPacketTemplate {
  PRIMARY
  SPECIALIST
  URGENT
}

model ProviderPacket {
  id        String                 @id @default(cuid())
  userId    String?
  anonId    String?
  template  ProviderPacketTemplate @default(PRIMARY)
  payload   Json
  createdAt DateTime               @default(now())

  shareLinks ProviderPacketLink[]

  @@index([userId])
  @@index([anonId])
}

model ProviderPacketLink {
  id        String    @id @default(cuid())
  token     String    @unique
  packetId  String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  packet   ProviderPacket            @relation(fields: [packetId], references: [id], onDelete: Cascade)
  accesses ProviderPacketAccessLog[]

  @@index([packetId])
}

model ProviderPacketAccessLog {
  id                   String   @id @default(cuid())
  providerPacketLinkId String
  accessedAt           DateTime @default(now())
  ipAddress            String?
  userAgent            String?

  link ProviderPacketLink @relation(fields: [providerPacketLinkId], references: [id], onDelete: Cascade)
}

model AccessLog {
  id            String   @id @default(cuid())
  actorId       String? // who performed the action
  subjectUserId String? // whose PHI was accessed
  action        String // VIEW, EXPORT, SHARE, REVOKE
  resourceType  String // CLINICAL_SUMMARY, DOCUMENT, PROVIDER_PACKET
  resourceId    String
  ipAddress     String?
  userAgent     String?
  metadata      Json? // additional context
  createdAt     DateTime @default(now())

  @@index([actorId, createdAt])
  @@index([subjectUserId, createdAt])
  @@index([resourceType, resourceId])
  @@index([createdAt])
}

// User Disable Events - Preserves history across multiple disable/enable cycles
model UserDisableEvent {
  id         String    @id @default(cuid())
  userId     String
  disabledAt DateTime  @default(now())
  disabledBy String // Admin user ID who performed the disable
  reason     String? // Optional free text reason
  resolvedAt DateTime? // When account was re-enabled (null = still disabled)
  resolvedBy String? // Admin user ID who re-enabled

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([disabledAt])
  @@index([resolvedAt])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime  @default(now())
  usedAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

model ConsentChangeLog {
  id          String   @id @default(cuid())
  userId      String
  consentType String // "clinicalSummary", "providerSharing", "emailNotifications"
  oldValue    Boolean
  newValue    Boolean
  changedBy   String? // User ID who made the change (null = user themselves)
  changedAt   DateTime @default(now())
  source      String // "user_settings", "admin_portal", "onboarding"

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, changedAt])
  @@index([consentType])
  @@index([changedAt])
}

model DataRequest {
  id                 String    @id @default(cuid())
  userId             String
  requestType        String // "export", "deletion"
  status             String    @default("pending") // "pending", "in_progress", "completed", "cancelled"
  requestedAt        DateTime  @default(now())
  fulfilledAt        DateTime?
  fulfilledBy        String? // Admin user ID who fulfilled the request
  cancelledAt        DateTime?
  cancelledBy        String? // Admin user ID who cancelled the request
  cancellationReason String?
  notes              String? // Admin notes about the request

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([requestType])
  @@index([requestedAt])
}

model Appointment {
  id                String   @id @default(cuid())
  userId            String?
  anonId            String?
  providerName      String
  providerSpecialty String?
  appointmentDate   DateTime
  appointmentType   String // "checkup", "follow-up", "consultation", "procedure", "lab", "imaging", "other"
  status            String   @default("scheduled") // "scheduled", "completed", "cancelled", "missed"
  location          String? // Office name or address
  notes             String?
  reminderSent      Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([anonId])
  @@index([appointmentDate])
  @@index([status])
}

model Provider {
  id        String   @id @default(cuid())
  userId    String?
  anonId    String?
  name      String
  specialty String?
  phone     String?
  email     String?
  address   String?
  notes     String?
  tags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ratings ProviderRating[]

  @@index([userId])
  @@index([anonId])
}

model ProviderRating {
  id             String   @id @default(cuid())
  userId         String?
  anonId         String?
  providerId     String
  providerName   String
  specialty      String?
  rating         Int // 1-5 stars
  tags           String[] @default([])
  notes          String?
  wouldRecommend Boolean  @default(true)
  lastVisit      DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([anonId])
  @@index([providerId])
}

model PhotoComparison {
  id          String   @id @default(cuid())
  userId      String?
  anonId      String?
  beforePhoto String // URL or path to before photo
  afterPhoto  String // URL or path to after photo
  title       String?
  notes       String?
  daysBetween Int? // Calculated days between photos
  category    String? // "face", "body", "skin", etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([category])
}

model VoiceMemo {
  id         String   @id @default(cuid())
  userId     String?
  anonId     String?
  audioUrl   String // URL to stored audio file
  transcript String? // AI-generated transcription
  title      String?
  duration   Int? // Duration in seconds
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([createdAt])
}

model RedFlag {
  id          String   @id @default(cuid())
  userId      String?
  anonId      String?
  type        String // "interaction", "contraindication", "timing", "safety"
  severity    String // "critical", "warning", "info"
  title       String
  description String
  medications String[] @default([])
  dismissed   Boolean  @default(false)
  detectedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([anonId])
  @@index([dismissed])
  @@index([severity])
}

model TrustedCircleMember {
  id           String   @id @default(cuid())
  userId       String // Owner of the vault
  name         String
  email        String
  relationship String?
  permissions  String[] @default([])
  status       String   @default("pending") // "pending", "active", "expired"
  invitedAt    DateTime @default(now())
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([email])
  @@index([status])
}

model TrustedCircleInvite {
  id           String    @id @default(cuid())
  userId       String // Owner sending the invite
  inviteeName  String
  inviteeEmail String
  relationship String?
  permissions  String[]  @default([])
  token        String    @unique @default(cuid())
  status       String    @default("pending") // "pending", "accepted", "expired"
  expiresAt    DateTime?
  acceptedAt   DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
  @@index([token])
  @@index([status])
  @@index([inviteeEmail])
}
model FamilyMember {
  id           String   @id @default(cuid())
  vaultId      String // Connects to Vault instead of userId directly
  relationship String // "self" | "parent" | "child" | "sibling" | "spouse" | "grandparent" | "aunt" | "uncle" | "cousin" | "other"
  conditionTags String[] @default([]) // Health conditions
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  @@index([vaultId])
  @@index([relationship])
}

// P0 PHASE 2: VAULT + BLUEPRINT INTELLIGENCE FOUNDATION
// Single source of truth for all health data

model Vault {
  id        String   @id @default(cuid())
  userId    String   @unique // 1:1 relationship with User
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // All vault data connects here
  vaultItems    VaultItem[]
  familyMembers FamilyMember[]
  blueprintInsights BlueprintInsight[]

  @@index([userId])
}

enum VaultItemType {
  DOCUMENT
  LAB
  NOTE
  TOOL_OUTPUT
}

model VaultItem {
  id        String   @id @default(cuid())
  vaultId   String
  type      VaultItemType
  title     String
  metadata  Json // Structured data based on type
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  // Specific data types
  labResults LabResult[]

  @@index([vaultId])
  @@index([type])
}

model LabResult {
  id          String   @id @default(cuid())
  vaultItemId String
  testName    String
  flags       String[] @default([]) // "normal", "borderline", "abnormal"
  parsedSummary String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  vaultItem VaultItem @relation(fields: [vaultItemId], references: [id], onDelete: Cascade)

  @@index([vaultItemId])
}

enum InsightPriority {
  HIGH
  MEDIUM
  LOW
}

enum InsightSource {
  LAB
  FAMILY
  TOOL
  DOCUMENT
}

model BlueprintInsight {
  id        String   @id @default(cuid())
  vaultId   String
  source    InsightSource
  priority  InsightPriority
  message   String // Plain language only
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vault Vault @relation(fields: [vaultId], references: [id], onDelete: Cascade)

  @@index([vaultId])
  @@index([source])
  @@index([priority])
}

// PHASE 6F: SYSTEM HEALTH & FEATURE FLAGS
// Centralized feature toggles and system health monitoring

enum FeatureFlagType {
  EMERGENCY_TOGGLE
  SYSTEM_CONTROL
  MASCOT_CONTROL
}

model FeatureFlag {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., "mascot-controls", "audio-modes", "exports", "signups", "read-only"
  name        String   // Human readable name
  description String?  // Description of what this flag controls
  type        FeatureFlagType @default(EMERGENCY_TOGGLE)
  enabled     Boolean  @default(true)
  defaultValue Boolean @default(true) // What to default to if flag is missing
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Audit trail
  flagChanges FeatureFlagChange[]

  @@index([key])
  @@index([type])
  @@index([enabled])
}

model FeatureFlagChange {
  id         String   @id @default(cuid())
  flagId     String
  changedBy  String   // Admin user ID who made the change
  oldValue   Boolean
  newValue   Boolean
  reason     String?  // Reason for the change
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  flag FeatureFlag @relation(fields: [flagId], references: [id], onDelete: Cascade)

  @@index([flagId])
  @@index([changedBy])
  @@index([createdAt])
}

model SystemHealthCheck {
  id        String   @id @default(cuid())
  service   String   // "api", "auth", "vault", "blueprint", "lab-decoder", "stripe"
  status    String   // "healthy", "degraded", "unhealthy", "unknown"
  message   String?  // Status message
  latency   Int?     // Response time in ms
  checkedAt DateTime @default(now())

  @@index([service])
  @@index([status])
  @@index([checkedAt])
}

// PHASE 6G: CONTENT GOVERNANCE
// Mascot script versioning and content control

enum MascotScriptStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

model MascotScript {
  id          String   @id @default(cuid())
  mascotId    String   // e.g., "beau-tox", "peppi", "f-ill", "rn-lisa-grace"
  version     String   // Semantic version like "1.0.0"
  status      MascotScriptStatus @default(DRAFT)
  title       String   // Human readable title
  description String?  // Description of changes
  scriptContent Json    // The actual script data (dialogues, behaviors, etc.)
  audioEnabled Boolean @default(true)
  autoplayEnabled Boolean @default(false)
  createdBy   String   // Admin user ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Audit trail
  scriptChanges MascotScriptChange[]

  @@index([mascotId])
  @@index([status])
  @@index([version])
  @@unique([mascotId, version])
}

model MascotScriptChange {
  id         String   @id @default(cuid())
  scriptId   String
  changedBy  String   // Admin user ID
  changeType String   // "created", "updated", "status_changed", "activated", "archived"
  oldValue   Json?    // Previous state
  newValue   Json?    // New state
  reason     String?  // Reason for change
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  script MascotScript @relation(fields: [scriptId], references: [id], onDelete: Cascade)

  @@index([scriptId])
  @@index([changedBy])
  @@index([createdAt])
}
